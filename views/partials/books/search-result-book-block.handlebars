<div class="w3-card-4 review-box grid-item book-block">
    <img src="/img/placeholder.png" class="book-thumbnail" data-isbn="ISBN:{{isbn}}" />
    <p class="w3-container review-card-head review-bar">{{title}}</p>
    <p>Author: {{author}}</p>
    <p>Published: {{publicationDate}}</p>
    <p>{{numPages}} pages</p>
    <p class="star-rating" data-avg-rating="{{averageRating}}" data-book-id="{{bookId}}"><span class="fa fa-star" data-rating="1"></span><span class="fa fa-star" data-rating="2"></span><span class="fa fa-star" data-rating="3"></span><span class="fa fa-star" data-rating="4"></span><span class="fa fa-star" data-rating="5"></span></p>
    <a href="" class="add-to-library w3-button teal-btn" data-book-id="{{bookId}}">Add to Library</a>
    <a href="/reviews/book/{{bookId}}" class="w3-button teal-btn">View Reviews</a>
</div>
